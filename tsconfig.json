{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist/",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "removeComments": true,
    "jsx": "react",
    "types": ["cypress"],
    "paths": {
      "*": ["./src/@types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./src/stories/", "./src/assets/"]
}
